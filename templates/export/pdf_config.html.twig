{% extends 'base.html.twig' %}

{% block title %}
    {% trans %}PDF Export Settings{% endtrans %} - {{ parent() }}
{% endblock %}

{% block body %}
    <h2>{% trans %}PDF Export Settings{% endtrans %}</h2>

    <div class="row">
        <div class="col-lg-6">
            <div class="card">
                <div class="card-body">
                    <form action="{{ path('app.export.pdf') }}" method="get">
                        <div class="form-group">
                            <label for="pages_with_member_placeholders">
                                {% trans %}Pages with member placeholders{% endtrans %}
                            </label>
                            <input type="number" class="form-control"
                                   name="pages_with_member_placeholders"
                                   id="pages_with_member_placeholders"
                                   value="{{ options.pages_with_member_placeholders }}" />
                        </div>
                        <div class="form-group">
                            <label for="pages_for_notes">
                                {% trans %}Pages for personal notes{% endtrans %}
                            </label>
                            <input type="number" class="form-control"
                                   name="pages_for_notes"
                                   id="pages_for_notes"
                                   value="{{ options.pages_for_notes }}" />
                        </div>
                        <div class="form-group">
                            <label for="bleed_in_mm">
                                {% trans %}Size of bleed on each edge{% endtrans %}
                            </label>
                            <div class="input-group">
                                <input type="number" class="form-control"
                                       name="bleed_in_mm"
                                       id="bleed_in_mm"
                                       value="{{ options.bleed_in_mm }}" />
                                <div class="input-group-append">
                                    <span class="input-group-text">mm</span>
                                </div>
                            </div>
                            <p class="text-black-50 small">
                                {% trans %}In printing, bleed is printing that goes beyond the edge of where the sheet will be trimmed. In other words, the bleed is the area to be trimmed off.{% endtrans %}
                            </p>
                        </div>
                        <div class="form-group form-check">
                            <input type="checkbox" class="form-check-input"
                                   name="print_working_groups"
                                   id="print_working_groups"
                                   value="1" {% if options.print_working_groups %}checked{% endif %} />
                            <label class="form-check-label" for="print_working_groups">
                                {% trans %}Print working groups{% endtrans %}
                            </label>
                        </div>
                        <div class="form-group">
                            <p>
                                <strong class="text-danger">{% trans %}Keep in mind that the number of pages has be devideable by four, for printing.{% endtrans %}</strong>
                                {% trans %}To achieve that one can modify the number of placeholder pages with the options above.{% endtrans %}
                            </p>
                            <div class="text-right">
                                <button type="submit" class="btn btn-primary">
                                    {% trans %}Generate PDF{% endtrans %}
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}